{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyNonUKRegions",
      "Effect": "Deny",
      "Action": "*",
      "Resource": "*",
      "Condition": {
        "StringNotEquals": {
          "aws:RequestedRegion": [
            "eu-west-1",
            "eu-west-2"
          ]
        },
        "ForAllValues:StringNotEquals": {
          "aws:PrincipalTag/BreakGlass": "true"
        }
      }
    },
    {
      "Sid": "AllowGlobalServices",
      "Effect": "Allow",
      "Action": [
        "iam:*",
        "organizations:*",
        "route53:*",
        "cloudfront:*",
        "waf:*",
        "support:*",
        "trustedadvisor:*"
      ],
      "Resource": "*"
    }
  ]
}